#include <iostream>
#include <vector>
#include <string>
using namespace std;
struct Book{
    string title;
    string author ;
    int price;
};
int main(){
int inputbook;
cout<<"How much you Want to store Data of book "<<endl;
cin>>inputbook;
vector<Book>books(inputbook);
for(int i=0; i<inputbook; i++){
    cout<<"Books are "<<i+1<<endl;
    cout<<"Enter Title of book";
    cin>>books[i].title;
    cout<<"Enter author of book"<<endl;
    cin>>books[i].author;
    cout<<"Enter price of book"<<endl;
    cin>>books[i].price;
}
    cout<<endl;
    cout<<endl;
    cout<<"The Total Details Of Book Are Below"<<endl;
    for(int i=0; i<inputbook; i++){
        cout<<"Title"<<books[i].title<<endl;
                cout<<"author"<<books[i].author<<endl;
                        cout<<"price"<<books[i].price<<endl;
    }
    cout<<"===========>|THE END |<==============="<<endl;
    return 0;
}
