#include <iostream>
using namespace std;
int main() {
    int low = 1, high = 100;
    char ans;
    int attempts = 0;
    cout << "Think of a number between 1 and 100." << endl;
    cout << "c = correct, h = higher, l = lower" << endl;
    while(low <= high) {
       int mid = (low + high)/2;
        attempts++;
      cout << "Is your number " << mid << "? ";
          cin >> ans;
        if(ans == 'c') {
        cout << "Guessed in " << attempts << " attempts!" << endl;
          return 0;
        } else if(ans == 'h') low = mid + 1;
        else if(ans == 'l') high = mid - 1;
        else cout << "Invalid input!" << endl;
}
    cout << "Game error." << endl;
    return 0;
}
