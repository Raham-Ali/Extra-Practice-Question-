#include <iostream>
using namespace std;
void akinatorgame(){
    int l=1;
    int h=100;
    char ans;
    int attempts=0;
    int maxtries=10;
    cout<<"Think A number between 1 to 100"<<endl;
    cout<<"Answer with 'y' for yes, 'n' for no,'h' for high,'l' for low"<<endl;
    cout<<"you have "<<maxtries<<"attempts the number"<<endl;
    while(l<=h && attempts<maxtries){
    int mid=(l + h)/2;
    attempts++;
    cout << "Is your number " << mid << "? (y/n/h/l): ";
        cin >> ans;
        if(ans=='y'){
            cout<<"Congratulation you win"<<endl;
            break;
        }else if(ans=='h'){
            l=mid+1;
        }else if(ans=='l'){
            h=mid-1;
        }else{
            cout<<"wrong option"<<endl;
        }
        if(attempts==maxtries){
            cout<<"i couldnot find guess the number"<<endl;
        }
        if (l > h && attempts <maxtries) {
        cout << "any fault" << endl;
         }
    }
}
int main() {
    akinatorgame();
    return 0;
}
